@model IEnumerable<Proveedor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />  
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-5">
            <h2 class="text-dark">Lista de Proveedores</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_Createbuttonpartial" />
        </div>
    </div>

    <br />
    <div>

        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th class="text-white bg-dark">
                            @Html.DisplayNameFor(m => m.NombreProveedor)
                        </th>
                        <th class="text-white bg-dark">
                            @Html.DisplayNameFor(m => m.NombreContacto)
                        </th>
                        <th class="text-white bg-dark">
                            @Html.DisplayNameFor(m => m.CorreoContacto)
                        </th>
                        <th class="text-white bg-dark">
                            @Html.DisplayNameFor(m => m.TelefonoContacto)
                        </th>

                        <th class="bg-dark"></th>
                        <th class="bg-dark"></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.NombreProveedor)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CorreoContacto)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.CorreoContacto)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.TelefonoContacto)
                            </td>
 
                            <td>

                                
                                <partial name="_TableButtonPartial" model="item.id" />
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Existen Proveedores Creados</p>
            }
        </div>


    </div>
    </div>